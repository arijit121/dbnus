    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "nodemon",
            "program": "src/index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
            {
      "type": "node",
      "request": "launch",
      "name": "Debug TS with Nodemon",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--exec",
        "node --experimental-network-inspection -r ts-node/register"
      ],
      "program": "${workspaceFolder}/src/index.ts",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      }
    }
    ]
}